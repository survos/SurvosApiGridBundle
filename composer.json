{
    "name": "survos/api-grid-bundle",
    "description": "incorporate DatatablesNet, using twig and stimulus, twig_component requires ^2.2",
    "keywords": [
        "symfony-ux",
        "symfony6"
    ],
    "type": "symfony-bundle",
    "license": "MIT",
    "authors": [
        {
            "name": "Tac Tacelosky",
            "email": "tacman@gmail.com"
        }
    ],
    "require": {
        "php": "^8.1",
        "doctrine/doctrine-bundle": "^2.7",
        "doctrine/orm": "^2.12",
        "doctrine/persistence": "^2.0 || ^3.0",
        "survos/inspection-bundle": "^1.5.102",
        "symfony/config": "^6.3 || ^7.0",
        "symfony/dependency-injection": "^6.3 || ^7.0",
        "symfony/http-kernel": "^6.3 || ^7.0",
        "symfony/options-resolver": "^6.3 || ^7.0",
        "symfony/ux-twig-component": "^2.13",
        "twig/twig": "^3.8",
        "symfony/dom-crawler": "^6.3 || ^7.0"
    },
    "autoload": {
        "psr-4": {
            "Survos\\ApiGrid\\": "src/"
        }
    },
    "scripts": {
        "phpstan": "vendor/bin/phpstan analyse"
    },
    "suggest": {
        "monolog/monolog": "Allows more advanced logging of the application flow",
        "api-platform/core": "For javascript-based grid rendering",
        "friendsofsymfony/jsrouting-bundle": "use path() in javascript grid rendering"
    },
    "require-dev": {
        "roave/security-advisories": "dev-latest",
        "phpstan/phpstan": "^1.8",
        "api-platform/core": "^3.2",
        "symfony/browser-kit": "^6.3 || ^7.0",
        "symfony/framework-bundle": "^6.3 || ^7.0",
        "symfony/phpunit-bridge": "^6.3 || ^7.0",
        "symfony/twig-bundle": "^6.3 || ^7.0",
        "symfony/var-dumper": "^6.3 || ^7.0"
    },
    "config": {
        "allow-plugins": {
            "php-http/discovery": true
        }
    },
    "extra": {
        "branch-alias": {
            "dev-main": "1.6-dev"
        },
        "symfony": {
            "require": "^6.4 || ^7.0"
        }
    },
    "prefer-stable": true
}
